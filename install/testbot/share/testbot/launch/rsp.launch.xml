<launch>
    <arg name="use_sim_time" default="false" description="Use sim time if true"/>

    <node
        pkg="robot_state_publisher"
        exec="robot_state_publisher"
        output="screen">
        <param name="robot_description" value="$(command xacro $(find-pkg-share testbot)/description/test_robot.urdf.xacro)"/>
        <param name="use_sim_time" value="$(arg use_sim_time)"/>
    </node>
</launch>
