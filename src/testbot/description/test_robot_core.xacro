<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

#Include connected files
    <xacro:include filename="inertial_macros.xacro" />

#Define colours
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>

    <material name="purple">
        <color rgba="0.8 0 0.7 1" />
    </material>

    <material name="white">
        <color rgba ="1 1 1 1" />
    </material>


#LINKS
    
    <!-- ROBOT FOOTPRINT LINK -->
    <link name="base_footprint" />

    <!-- ROBOT BODY LINK -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size ="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <material name="purple" />
        </visual>
        <collision>
            <geometry>
                <box size ="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
        </collision>
        <xacro:inertial_box mass="0.5" x="0.6" y="0.4" z="0.2">
            <origin xyz="0 0 0.1" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!-- LIDAR LINK -->
    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius="0.09" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="white" />
        </visual>
        <collision>
            <geometry>
                <box size ="0.18 0.18 0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>
    
    <!-- LEFT WHEEL LINK -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0.025 0" rpy="1.57 0 0" />
            <material name="grey" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius ="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0.025 0" rpy="1.57 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.1" length="0.05">
            <origin xyz="0 0.025 0" rpy="1.57 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 -0.025 0" rpy="-1.57 0 0" />
            <material name="grey" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 -0.025 0" rpy="-1.57 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.1" length="0.05">
            <origin xyz="0 -0.025 0" rpy="-1.57 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEEL LINK -->
    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0" />
            <material name="grey" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0" />
        </collision>
        <xacro:inertial_sphere mass="0.08" radius="0.05">
            <origin xyz="0 0 -0.05" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>


#JOINTS

    <!-- ROBOT BODY FOOTPRINT JOINT -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.1" rpy="0 0 0" />
    </joint>

    <!-- LIDAR JOINT -->
    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link" />
        <child link="lidar" />
        <origin xyz="0 0 0.225" rpy="0 0 0" />
    </joint>

    <!-- LEFT WHEEL JOINT -->
    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="-0.15 0.2 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- RIGHT WHEEL JOINT -->
    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="-0.15 -0.2 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- CASTER WHEEL JOINT -->
    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="caster_wheel" />
        <origin xyz="0.2 0 0" rpy="0 0 0" />
    </joint>

</robot>