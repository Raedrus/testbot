<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <ros2_control name="GazeboSimControl" type="system">
        <hardware>
            <plugin>gz_ros2_control/GazeboSimControl</plugin>
        </hardware>
        
        <joint name="base_left_wheel_joint">
            <command_interface name="velocity">
                <param name="min">-10 </param>
                <param name="max">10 </param>
            </command_interface>
            <state_interface name ="velocity"/>
            <state_interface name ="position"/>
        </joint>

        <joint name="base_right_wheel_joint">
            <command_interface name="velocity">
                <param name="min">-10 </param>
                <param name="max">10 </param>
            </command_interface>
            <state_interface name ="velocity"/>
            <state_interface name ="position"/>
        </joint>
    </ros2_control>

    <gazebo>
        <plugin filename="libign_ros2_control" name="ign_ros2_control::IgnitionROS2ControlPlugin">
            <!-- <robot_param>robot_description</robot_param>
            <robot_param_node>robot_state_publisher</robot_param_node> -->
            <parameters>$(find testbot)/config/controllers.yaml</parameters>
        </plugin>
    </gazebo>

</robot>